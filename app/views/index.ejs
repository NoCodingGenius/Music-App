<%- include('shared/header', {'pageTitle' : 'Artists'}); %>
  <h1 class="white-text">Artists</h1>
  <div class="divider"></div>
  <div class="row"></div>
  <% artists.forEach(function(artist){%>
    <div class="row">
      <div class="col s12 m2 l2">
        <a href="/artist/<%= artist.id %>">
          <img class="circle" src="http://placehold.it/110x110" alt="<%= artist.name %>">
        </a>
      </div>

      <div class="col s12 m8 l8">
        <p>
          <a class="white-text" href="/artist/<%= artist.id %>">
            <%= artist.name %>
          </a>
        </p>
        <p>#of Albums:
          <%= artist.albumCount %>
        </p>
        <p>Genre:
          <%= artist.genre %>
        </p>
      </div>

      <div class="col s12 m2 l2">
        <i class="fa fa-star yellow-text" aria-hidden="true"></i>
        <i class="fa fa-star yellow-text" aria-hidden="true"></i>
        <i class="fa fa-star yellow-text" aria-hidden="true"></i>
        <i class="fa fa-star yellow-text" aria-hidden="true"></i>
        <i class="fa fa-star grey-text" aria-hidden="true"></i>
      </div>

    </div>
    <%})%>
<%- include shared/footer %>
