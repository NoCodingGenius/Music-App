<%- include('shared/header', {'pageTitle' : album.title}); %>
  <div class="row"></div>
    <div class="row">
      <div class="col s12 m9 l9">
        <h2><a class="white-text" href="/artist/<%= artist.id %>"><%= album.title %></a></h2>
        <div class="row">
          <div class="col s2">
            <a class="white-text" href="/artist/<%= artist.id %>">
              <%= artist.name %>
            </a>
          </div>
          <div class="col s2">
            <%= album.year %>
          </div>
          <div class="col s2">
            Songs:
            <%= album.songCount %>
          </div>
        </div>
      </div>

      <div class="col s12 m3 l3 right-align">
        <img class="circle photo" src="<%= album.image %>" alt="">
      </div>
    </div>

<ul class="collection with-header">
  <li class="collection-header white-text grey">
    <div class="row">
      <div class="col s12 m8 l8">
        <h4>Song</h4>
      </div>
      <div class="col s12 m2 l2 center-align">
        <h4>Track</h4>
      </div>
      <div class="col s12 m2 l2 center-align">
        <h4>Length</h4>
      </div>
    </div>
  </li>
  <% songs.forEach(function(song){%>
  <li class="collection-item">
    <div class="row">
      <div class="col s12 m8 l8">
        <%= song.title %>
      </div>
      <div class="col s12 m2 l2 center-align">
        <%= song.track_no %>
      </div>
      <div class="col s12 m2 l2 center-align">
        <%= song.trackTime %>
      </div>
    </div>
  </li>
  <%})%>
</ul>
<% include shared/footer %>
