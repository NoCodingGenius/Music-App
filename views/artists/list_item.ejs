<div class="row">
  <div class="col s12 m2 l2">
    <a class="white-text" href="/artists/<%= artist.id %>">
      <img class="circle artist-image" src="<%= artist.image %>" >
    </a>
  </div>

  <div class="col s12 m8 l8">
    <p>
      <a class="white-text" href="/artists/<%= artist.id %>">
        <%= artist.name %>
      </a>
    </p>
    <p>Albums:
      <%= artist.albumCount %>
    </p>
    <p>Genre:
      <%= artist.genre %>
    </p>
  </div>

  <div class="col s12 m2 l2">
    <%- include ../layout/ratings %>
  </div>

</div>