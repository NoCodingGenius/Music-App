<%- include('layout/header', {'pageTitle' : artist.name}); %>
<div class="row"></div>
<div class="row">

  <div class="col s12 m9 l9">
    <h2 class="white-text"><%= artist.name %></h2>
    <div class="row">
      <div class="col s4">
        Albums:
        <%= artist.albumCount %>
      </div>
      <div class="col s4">
        Genre:
        <%= artist.genre %>
      </div>
    </div>
  </div>

  <div class="col s12 m3 l3">
    <img class="circle photo" src="<%= artist.image %>" alt="">
  </div>
</div>

<% artistAlbums.forEach(function(album){ %>
    <% include artists/album %>
<% }) %>
<% include layout/footer %>
